<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.canh.movie.ui.movie_detail.sharing.SharePostViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_8">

            <TextView
                android:id="@+id/shareTextTitle"
                style="?android:textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_8"
                android:text="@string/share_post_title_share_movie"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <View
                android:id="@+id/decoratorLineTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/color_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shareTextTitle" />

            <EditText
                android:id="@+id/shareTextContent"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:background="@null"
                android:ellipsize="end"
                android:ems="10"
                android:gravity="start"
                android:hint="@string/share_post_hint_your_comment"
                android:lines="3"
                android:maxLines="3"
                android:padding="@dimen/dp_8"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.434"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/decoratorLineTop" />

            <LinearLayout
                android:id="@+id/layoutMovieInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shareTextContent">

                <ImageView
                    android:id="@+id/shareImageMoviePosterPath"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_160"
                    app:bindSmallImage="@{viewModel.posterPathMovie}"
                    tools:src="@color/color_primary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shareTextMovieTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        style="?android:textAppearanceMedium"
                        android:maxLines="1"
                        android:text="@{viewModel.titleMovie}" />

                    <TextView
                        android:id="@+id/shareTextMovieOverview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:ellipsize="end"
                        android:maxLines="7"
                        android:text="@{viewModel.overviewMovie}" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/decoratorLineBottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/color_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/shareButtonShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:text="@string/share_post_button_share" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/shareProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AppProgressBar"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
